type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  confirmation: Boolean! @default(value: "false")
  AppointmentsA: [AppointmentA!]
  AppointmentsB: [AppointmentB!]
}

type ServiceA {
  #common data fields for each service
  #service type to indicate type of service since prisma doesn't support unions yet.
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  Birthday: String!
  phone: Int
  gender: Gender
  avatar: String
  Appointments: [AppointmentA!]
}
type ServiceB {
  #common data fields for each service
  #service type to indicate type of service since prisma doesn't support unions yet.
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  Birthday: String!
  phone: Int
  gender: Gender
  avatar: String
  Appointments: [AppointmentB!]
}

type AppointmentA {
  id: ID! @unique
  serviceId: ServiceA!
  userId: User!
  day: String!
  startTime: String! @unique
  endTime: String! @unique
  type: AppointmentType!
}
type AppointmentB {
  id: ID! @unique
  serviceId: ServiceB!
  userId: User!
  day: String!
  startTime: String! @unique
  endTime: String! @unique
  type: AppointmentType!
}

enum AppointmentType {
  VERY_SHORT #15m
  SHORT #30m
  LONG #1h
}
enum Gender {
  MALE
  FEMALE
}
