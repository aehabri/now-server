type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  Appointments: [Appointment!] # example : [appointmentId1, appointmentId2, etc...] refrence ids to the appointment table.
  #messages
}

type Service {
  id: ID! @unique
  fullName: String!
  Bio: String
  type: ServiceType!
  email: String! @unique
  password: String!
  Birthday: DateTime!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  Appointments: [Appointment!]
}
