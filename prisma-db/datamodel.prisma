type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  Appointments: [Appointment!]
}

type Service {
  #common data fields for each service
  #service type to indicate type of service since prisma doesn't support unions yet.
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  Birthday: String!
  phone: Int
  gender: Gender
  avatar: String
  Appointments: [Appointment!]
  type: ServiceType!
}

enum ServiceType {
  DOCTOR
  LAWYER
}

type Appointment {
  id: ID! @unique
  serviceId: Service!
  userId: User!
  day: String!
  startTime: String! @unique
  endTime: String! @unique
  type: AppointmentType!
}

enum AppointmentType {
  VERY_SHORT #15m
  SHORT #30m
  LONG #1h
}
enum Gender {
  MALE
  FEMALE
}
